/**app.wxss**/

/**global colors**/
view {
  --card-bg: #F2E9E1; 
  --txt: black;
  --back-bg: #333333;
  --card-footer-bg: #CBE86B;
  --footer-txt: black;
}

.post-txt{
  font-family: Arial, Helvetica, sans-serif;
  font-size: 13pt;
}
.card {
  display: flex;
  background-color: var(--card-bg);
  min-height: 100px;
  width: 90vw;
  box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.2);
  position: relative;
  border-radius: 3px;
  margin: 5px;
  padding-top: 5px;
  padding: 5px 5px 0px 5px;
  overflow: hidden;
  vertical-align: align-top;
}

.card-footer{
  background-color: var(--card-footer-bg);
  position: absolute;
  bottom: 0;
  width: 100%;
  margin: -5px;
  padding: 5px;
}

.footer-left{
float: left;
font-size: 12pt;
color: var(--footer-txt);
}

.footer-right{
  float: right;
  margin: 0px 10px 0px 0px;
  font-size: 12pt;
  color: var(--footer-txt);
  font-weight: bold;
}
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: var(--back-bg)
} 
