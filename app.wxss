/**app.wxss**/

/**global colors**/
view {
  --offwhite: #F2E9E1; 
  --txt: black;
  --darkgrey: #464646;
  --brightgreen: #CBE86B;
  --footer-txt: black;
}

.post-txt{
  font-size: 12pt;
}
.card {
  display: flex;
  background-color: var(--offwhite);
  min-height: 100px;
  width: 90vw;
  box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.7);
  position: relative;
  border-radius: 5px;
  margin: 5px;
  padding-top: 5px;
  padding: 5px 5px 0px 5px;
  overflow: hidden;
}

.card-footer{
  background-color: var(--brightgreen);
  position: absolute;
  bottom: 0;
  width: 100%;
  margin: -5px;
  padding: 5px;
}

.footer-left{
float: left;
font-size: 12pt;
color: black;
}

.footer-right{
  float: right;
  margin: 0px 10px 0px 0px;
  font-size: 12pt;
  color: black;
  font-weight: bold;
}

.btn-comment{
  margin-top: 10px;
  margin-bottom: 10px;
  color: var(--brightgreen);
  background-color: var(--card-footer-bg);
  border: 1px solid var(--brightgreen);
  padding: 0px;
  border-radius: 50px;
  font-weight: lighter;
  margin: 15px
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: var(--darkgrey);
  border: 1px solid white;
  justify-content: flex-start;
} 
