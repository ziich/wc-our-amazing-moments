  <!-- ADD DIFFERENT ATTRIBUTES ONCE OUR MODELS ARE DEFINED -->

    <block wx:for="{{posts}}"> 
      <view class="card">
      <view class="post-txt">{{item.content}}</view>
      <view class = "post-user">{{item.post_user.name}}</view>
        <view class="card-footer">
        <view class="footer-left">{{item.date}}</view>
        <view class = "footer-right">like: {{item.like}}</view>
        <view class="footer-right" bindtap = "test" data-id = "{{item.id}}">comment({{item.comments.length}}) </view>
        
        </view>
    </view>
    </block>  

    <view class="card">
      <view class="bg-card" style="background-image: url({{pictures}});"></view>
